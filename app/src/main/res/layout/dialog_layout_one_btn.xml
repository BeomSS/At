<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:elevation="@dimen/elevation_10dp">

    <TextView
        android:id="@+id/tvDlgOneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_10dp"
        android:layout_marginEnd="@dimen/margin_padding_10dp"
        android:layout_marginTop="@dimen/margin_padding_10dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvDlgOneContent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDlgOneContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_20dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_15dp"
        app:layout_constraintBottom_toTopOf="@+id/loDlgOneButtonSpace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDlgOneTitle" />

    <LinearLayout
        android:id="@+id/loDlgOneButtonSpace"
        android:layout_width="@dimen/size_0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_layout_border_bottom"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDlgOneContent">

        <Button
            android:id="@+id/btnDlgOneButtonOk"
            android:layout_width="@dimen/size_200dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_padding_10dp"
            android:background="@color/colorBrightCloudy"
            android:text="@string/str_confirm"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_20dp"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>