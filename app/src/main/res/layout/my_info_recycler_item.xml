<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_padding_5dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/layout_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_padding_5dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_15dp" />

        <TextView
            android:id="@+id/layout_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_padding_5dp"
            android:textColor="@color/colorPurple"
            android:textSize="@dimen/text_15dp" />

        <TextView
            android:id="@+id/layout_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_padding_5dp"
            android:textSize="@dimen/text_15dp" />

        <TextView
            android:id="@+id/layout_writers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_padding_5dp"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/text_15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/layout_titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_5dp"
        android:textColor="@color/colorDarkMint"
        android:textSize="@dimen/text_20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <TextView
            android:id="@+id/layout_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_3dp"
            android:layout_marginEnd="@dimen/margin_padding_5dp"
            android:textColor="@color/colorSimilarRed"
            android:textSize="@dimen/text_15dp" />

        <TextView
            android:id="@+id/layout_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_3dp"
            android:layout_marginEnd="@dimen/margin_padding_5dp"
            android:textSize="@dimen/text_15dp" />

    </LinearLayout>

</LinearLayout>